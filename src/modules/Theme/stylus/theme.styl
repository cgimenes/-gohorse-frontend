/** Stylus Styles */
@import '../../../../node_modules/vuetify/src/stylus/settings/_colors'

$theme := {
  primary: $grey.darken-4
  accent: $red.accent-2
  secondary: $grey.lighten-2
  info: $blue.base
  warning: $amber.base
  error: $red.base
  success: $purple.base
}
pink-gradient = linear-gradient(to right, #f857a6, #ff5858) !important
teal-gradient = linear-gradient(to right, #43cea2, #185a9d) !important
red-gradient = linear-gradient(to right, #cb2d3e, #ef473a) !important
blue-gradient = linear-gradient(to right, #00d2ff, #3a7bd5) !important
orange-gradient = linear-gradient(to right, #FF4E50, #F9D423) !important
yellow-green-gradient = linear-gradient(to right, #dce35b, #45b649) !important
green-gradient = linear-gradient(to right, #76b852, #8dc26f) !important
gordo-gradient = linear-gradient(to right, #348f50, #56b4d3) !important
gordo2-gradient = linear-gradient(to right, #43cea2, #185a9d) !important
gordo3-gradient = linear-gradient(to right, #283c86, #283c86) !important

.primary-gradient
  background gordo3-gradient

.secondary-gradient
  background orange-gradient

.pink-gradient
  background pink-gradient

.teal-gradient
  background teal-gradient

.blue-gradient
  background blue-gradient

.red-gradient
  background red-gradient

.card__title
  display block
